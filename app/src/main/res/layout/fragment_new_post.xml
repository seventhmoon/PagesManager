<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidfung.facebook.pagesmanager.ui.NewPostFragment">



    <EditText
        android:id="@+id/edittext_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edittext_hint_post_content"
        android:inputType="textMultiLine"
        android:lines="4"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_below="@id/edittext_post_content"
        android:id="@+id/button_post"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="@string/button_text_post" />


</RelativeLayout>
